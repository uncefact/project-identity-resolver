{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "__mocks__",
        "dist",
        "documentation/**/*"
    ],
}